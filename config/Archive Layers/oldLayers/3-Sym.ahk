; ====================================== ADDITIONAL KEYS ======================================
CapsLock::{
    SendInput("{Esc}")
    toggleLayer("Vim")
}

RAlt::{
    SendInput("{RControl down}")
    if(KeyWait(ThisHotkey, "T.180")){
        KeyWait(ThisHotkey)
        SendInput("{RControl up}")
        if(ThisHotkey = A_ThisHotkey){
            toggleLayer("Alpha")
        }
    } else {
        KeyWait(ThisHotkey)
        SendInput("{RControl up}")
    }
}